# Copy contents of this file into your .env file in the root repo. Update with real credentials in the untracked .env file, not this one!

# Goose CLI API key (if required for local Goose runs)
GOOSE_API_KEY=your-goose-api-key-here

# GitHub personal access token (needed for GitHub Actions or repo automation)
GITHUB_TOKEN=your-github-token-here

# Default Goose personality (optional, can be overridden in CLI commands)
GOOSE_DEFAULT_PERSONALITY=festive

# Output directory for generated files (Windows path format)
GOOSE_OUTPUT_DIR=C:\Users\<YourUsername>\Projects\goose-adventai\outputs

# Logging level (info, debug, warn, error)
LOG_LEVEL=info

# Timezone for scheduled tasks (important for GitHub Actions or cron jobs)
TIMEZONE=America/New_York

# -------------------------------
# Day 5: Flight Tracker Variables
# -------------------------------

# OpenSky Network API credentials (optional, increases rate limits)
# Anonymous: 10 requests/day
# Authenticated: 400 requests/day
# OpenSky Member: 4000 requests/day
# Sign up at https://opensky-network.org/index.html#registration
OPENSKY_CLIENT_ID=your-opensky-client-id-here
OPENSKY_ROLES=your-opensky-role-here

# CORS proxy URL (for browser requests)
CORS_PROXY_API_KEY=your-cors-proxy-api-key-here
CORS_PROXY_URL=https://corsproxy.io/?

# Default airport ICAO code (Atlanta Hartsfield-Jackson)
DEFAULT_AIRPORT=KATL

# Airport coordinates for filtering
AIRPORT_LAT=33.6407
AIRPORT_LON=-84.4277
AIRPORT_RADIUS_NM=15

# Cache Settings (milliseconds)
CACHE_TTL_ANONYMOUS=300000        # 5 minutes for anonymous users
CACHE_TTL_AUTHENTICATED=90000     # 90 seconds for authenticated users
CACHE_TTL_MEMBER=30000            # 30 seconds for OpenSky members

# MediaPipe Gesture Recognizer Settings
MEDIAPIPE_MODEL_PATH=/models/gesture_recognizer.task
MEDIAPIPE_CONFIDENCE=0.7          # 70% confidence threshold
MEDIAPIPE_DEBOUNCE_MS=300         # 300ms debounce for snappy response
MEDIAPIPE_MIRROR=true             # Mirror video for natural interaction
MEDIAPIPE_NUM_HANDS=1             # Track one hand at a time
MEDIAPIPE_SHOW_LANDMARKS=false    # Show hand skeleton overlay (debug mode)

# Per-Gesture Confidence Thresholds (optional)
GESTURE_CONFIDENCE_CLOSED_FIST=0.7
GESTURE_CONFIDENCE_OPEN_PALM=0.75

# Per-Gesture Debounce Times (optional, milliseconds)
GESTURE_DEBOUNCE_CLOSED_FIST=250  # Fast navigation
GESTURE_DEBOUNCE_OPEN_PALM=400    # Careful selection

# Visual Feedback Settings
SHOW_TOAST_NOTIFICATIONS=true
SHOW_GESTURE_INDICATOR=true
SHOW_WEBCAM_PREVIEW=true
SHOW_LANDMARK_OVERLAY=false
SHOW_CONFIDENCE_METER=true
TOAST_DURATION_MS=2000

# Display Settings
MAX_FLIGHTS_DISPLAYED=6
ANIMATION_SPEED_MS=300
AUTO_SCROLL_TO_SELECTED=true

# Development Settings
DEBUG_MODE=false
LOG_API_CALLS=true
LOG_GESTURE_EVENTS=true
MOCK_DATA_MODE=false              # Use mock flight data instead of API
